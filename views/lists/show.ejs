<section class="container content">

  <form method="POST" action="/lists/<%= list.id %>" class="list-name-form">
    <input type="hidden" name="_method" value="PUT">
    <label for="name" hidden>Name</label>
    <input type="text" name="name" id="name" value="<%= list.name %>" class="input is-large list-name-input" autocomplete="off">
    <button class="hidden">Update name</button>
  </form>

    <form method="POST" action="/lists/<%= list.id %>">
      <input type="hidden" name="_method" value="DELETE">
      <button class="button list-delete-button">Delete list</button>
    </form>

  <ul>
    <% list.entries.filter(entry => { %>
      <% return entry.active; %>
    <% }).forEach(entry => { %>
      <div class="columns">
      <li class="card column is-half">
      <div class="columns is-gapless is-multiline is-mobile">
        <form method="POST" action="/lists/<%= list.id %>/entries/<%= entry.id %>" class="column entry-update-form entry-id-<%= entry.id %>">
        <div class="columns is-mobile">
        <input type="hidden" name="_method" value="PUT">
          <div class="field column is-narrow justify-content-center">
          <div class="control">
            <label for="active-status-<%= entry.id %>" hidden>Active</label>
            <input type="checkbox" name="active" id="active-status-<%= entry.id %>" class="checkbox entry-id-<%= entry.id %>" value="<%= entry.active %>" checked>
          </div>
          </div>
          <div class="field column">
            <div class="control">
              <label for="entry-input-<%= entry.id %>" hidden>Entry</label>
              <input type="text" name="text" id="entry-input-<%= entry.id %>" value="<%= entry.text %>" class="input entry-input entry-id-<%= entry.id %> is-medium" autocomplete="off">
            </div>
          </div>
          <div class="column is-narrow justify-content-center">
          <button class="button is-small hidden">Update</button>
          </div>
          </div>
        </form>
        <form method="POST" action="/lists/<%= list.id %>/entries/<%= entry.id %>" class="column is-narrow justify-content-center">
          <input type="hidden" name="_method" value="DELETE">
          <button class="button is-small">Delete</button>
        </form>
        </div>
        <ul>
          <% entry.comments.forEach(comment => { %>
            <li class="columns is-multiline is-mobile">
              <div class="column is-narrow">
                <%= comment.text %>
              </div>
              <form method="POST" action="/lists/<%= list.id %>/entries/<%= entry.id %>/comments/<%= comment.id %>" class="column is-narrow">
                <input type="hidden" name="_method" value="DELETE">
                <button class="button">Delete</button>
              </form>
            </li>
          <% }) %>
          <li class="columns">
            <div class="column is-three-quarters">
              <button class="button is-small entry-id-<%= entry.id %> add-comment-button">Add comment</button>
              <form method="POST" action="/lists/<%= list.id %>/entries/<%= entry.id %>/comments" class="columns is-multiline is-mobile entry-id-<%= entry.id %> hidden comment-form">
                <input type="hidden" name="_method" value="PUT">
                <div class="control column">
                  <label for="new-comment-<%= entry.id %>" hidden>Comment</label>
                  <input type="text" name="text" id="new-comment-<%= entry.id %> " autocomplete="off" class="input entry-id-<%= entry.id %> comment-input is-small" placeholder="Add comment">
                </div>
                <div class="column is-narrow">
                  <button class="button is-small entry-id-<%= entry.id %> comment-button">Add</button>
                </div>
              </form>
            </div>
          </li>
        </ul>
      </li>
  </div>
    <% }) %>
    <div class="columns">
    <li class="card column is-half">
      <form method="POST" action="/lists/<%= list.id %>/entries" class="columns is-multiline is-mobile">
        <input type="hidden" name="_method" value="PUT">
        <input type="hidden" name="active" value="true">
        <div class="control column">
        <label for="new-entry" hidden>Entry</label>
        <input type="text" name="text" id="new-entry" autocomplete="off" class="input is-medium" placeholder="Add entry" autofocus>
      </div>
      <div class="column is-narrow justify-content-center">
        <button class="button is-small add-entry-button hidden"><i class="fa fa-plus" aria-hidden="true"></i></button>
      </div>
      </form>
    </li>
  </div>
  </ul>

</section>
